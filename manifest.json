{
    "name": "Coursera Quicksave",
    "version": "0.0.0.3",
    "manifest_version": 3,
    "description": "A simple extension to make downloading Coursera transcripts easier and cleaner",
    "author": "Bailey Douglass",
    "icons": {
        "16": "icons/icon16x16.png",
        "32": "icons/icon32x32.png",
        "48": "icons/icon48x48.png",
        "128": "icons/icon128x128.png"
    },
    "action": {
        "default_popup": "popup/popup.html"
    },
    "content_scripts": [
        {
            "matches": [
              "https://www.coursera.org/*"
            ],
            "js": ["content-scripts/content.js"]
        }
    ]
}